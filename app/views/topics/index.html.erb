<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <%= render topic %>
    <% end %>
  </div>
  <% if user_is_authorized_to_create_topics? %>
    <div class="col-md-4">
      <%= link_to "New Topic", new_topic_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
